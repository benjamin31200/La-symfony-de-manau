{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
<div class="text-center mt-5">
<div class="dropdown">
  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Recherche Favorites
  </button>
  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
{% for search in searchList %}
    <a class="dropdown-item" href="/search/{{ search.title }}">{{ search.name }}</a>
{% endfor %}
    <a class="dropdown-item" href="/search/new">Nouvelle recherche favorite</a>
</div>
</div>
    <h1 class="text-center mt-5">Tous les articles</h1>
<div class="container-fluid col-12">
			<div class="row row-cols-3">
				{% for product in products %}
					<div class="card" style="max-width: 400px;background-color: white ; margin: 1rem 1rem 1rem 1rem;">
						<img src="{{product.picture}}" class="card-img-top" alt="{{product.modele}}">
						<div class="col-md-15" style=" width: 100% ; background-color: white ;">
							<div class="card-body" style=" width: 100% ; background-color: white ;">
								<h5 class="card-title">{{product.modele}}</h5>
								<p class="card-text">{{product.brand}}</p>
								<p class="card-description">{{product.price|number_format(2, '.',)}}â‚¬</p>
							</div>
							<div class="button" display>
								<a href="{{ path('cart_add', {'id': product.id}) }}">
									<button class="button button-basket"></button>
								</a>
								<a href="{{ path('comparator_add', {'id': product.id}) }}">
									<span data-descr="Ajouter au comparateur">
										<button class="button-comparator"></button>
									</span>
								</a>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
{% endblock %}
