{% extends "base.html.twig" %}

{% block body %}
	{% for product in products %}
		<div class="card" style="max-width: 540px;">
			<div class="row g-0">
				<div class="col-md-4">
					<img src="{{product.picture}}" class="card-img-top" alt="{{product.modele}}">
				</div>
				<div class="col-md-8">
					<div class="card-body">
						<h5 class="card-title">{{product.modele}}</h5>
						<p class="card-text">{{product.brand}}</p>
						<p class="card-text">{{product.price|number_format(2, '.',)}}â‚¬</p>
					</div>
				</div>
			</div>
		</div>
	{% endfor %}
{% endblock %}
